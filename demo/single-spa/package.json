{
  "name": "single-spa-demo",
  "version": "1.0.0",
  "description": "Single-SPA Microfrontend Runtime Integration Demo",
  "scripts": {
    "start": "npm run serve",
    "serve": "webpack serve --config root-config/webpack.config.js --port 9001",
    "build": "npm run build:root && npm run build:mfes",
    "build:root": "webpack --config root-config/webpack.config.js",
    "build:mfes": "npm run build:home && npm run build:products && npm run build:cart && npm run build:checkout && npm run build:orders",
    "build:home": "webpack --config mfe-wrappers/webpack.config.js --env name=home",
    "build:products": "webpack --config mfe-wrappers/webpack.config.js --env name=products",
    "build:cart": "webpack --config mfe-wrappers/webpack.config.js --env name=cart",
    "build:checkout": "webpack --config mfe-wrappers/webpack.config.js --env name=checkout",
    "build:orders": "webpack --config mfe-wrappers/webpack.config.js --env name=orders"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "single-spa": "^5.9.5",
    "single-spa-react": "^5.1.4",
    "systemjs": "^6.14.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
